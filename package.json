    "babel-jest": "^23.0.1",
    "jest": "^23.1.0",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.8.1"
  },
  "dependencies": {
    "codemirror": "^5.38.0",
    "dompurify": "^1.0.5",
    "electron": "^2.0.2",
    "github-markdown-css": "^2.10.0",
    "highlight.js": "^9.12.0",
