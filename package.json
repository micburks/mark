{
  "name": "mark",
  "version": "0.0.1",
  "description": "Markdown viewer/editor",
  "main": "app/main.js",
  "scripts": {
    "build": "parcel build app/browser/index.jsx --cache-dir build/cache --target node",
    "build:watch": "parcel watch app/browser/index.jsx --cache-dir build/cache --target node --no-hmr",
    "demo": "run-p build:watch start",
    "start": "electron-forge start",
    "prepackage": "npm run build",
    "package": "electron-forge package",
    "publish": "electron-forge publish",
    "make": "electron-forge make"
  },
  "keywords": [
    "markdown",
    "electron"
  ],
  "author": "Mickey Burks",
  "license": "MIT",
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "electron-forge": "^5.2.2",
    "electron-prebuilt-compile": "3.0.2",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.8.1"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "codemirror": "^5.38.0",
    "dompurify": "^1.0.5",
    "electron-compile": "^6.4.3",
    "electron-squirrel-startup": "^1.0.0",
    "github-markdown-css": "^2.10.0",
    "highlight.js": "^9.12.0",
    "marked": "^0.4.0",
    "mousetrap": "^1.6.2",
    "prop-types": "^15.6.2",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-media": "^1.8.0"
  },
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm"
      },
      "electronWinstallerConfig": {
        "name": "mark"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "mark"
      }
    }
  }
}
